@using KhoaHocNauAn.Models;
@model IList<Blog>;

<div class="container py-5">
    <div class="row">
       
            <div class="col-md-8 ">
                 @foreach (var item in Model)
                {
                <div class="row mb-4">
                    <div class="col-md-12 col-lg-3 col-xl-3 mb-4 mb-lg-0">
                        <div class="bg-image hover-zoom ripple rounded ripple-surface">
                            <img src="@item.Images" class="img1" />
                            <a href="#!">
                                <div class="hover-overlay">
                                    <div class="mask" style="background-color: rgba(253, 253, 253, 0.15);"></div>
                                </div>
                            </a>
                        </div>
                    </div>
                    <div class="col-md-8 col-lg-8 col-xl-8">
                        <h4>@item.Title</h4>
                        <p class="text-truncate mb-4  " >
                            @item.Abstract
                        </p>
                    </div>

                </div>
                }
            </div>
        
       
        <div class="col-md-4">
            <div style="margin-bottom:-20px"; class="header">
                    <h2>Tin nổi bật</h2>
                </div>
                <div class="body widget popular-post">
                    <div class="row">
                        <div class="col-lg-10">
                            <div class="single_post mt-4">
                                <p style="margin-bottom:-3px;">Khoá học làm bếp nhật giảm giá cho các học viên</p>
                                <span>26/4/2024</span>
                                <div >
                                <img class="img2" src="/img/BepNhatA-Z.png" alt="Awesome Image">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
        </div>
    </div>
</div>

                                
<style>
    .img1 {
        width: 180px;
        height:130px;
    }

    .img2 {
        width: 260px;
        height: 220px;
    }
</style>