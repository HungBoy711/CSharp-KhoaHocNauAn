@model KhoaHocNauAn.Models.Customer;
@{
    Layout = "";
}
<link href="~/img/favicon.ico" rel="icon">

<!-- Google Web Fonts -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600&family=Nunito:wght@600;700;800&display=swap" rel="stylesheet">

<!-- Icon Font Stylesheet -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

<!-- Libraries Stylesheet -->
<link href="~/lib/animate/animate.min.css" rel="stylesheet">
<link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

<!-- Customized Bootstrap Stylesheet -->
<link href="~/cssr/bootstrap.min.css" rel="stylesheet">

<!-- Template Stylesheet -->
<link href="~/cssr/style.css" rel="stylesheet">


<section class="vh-100 bg-image">
    <div class="mask d-flex align-items-center h-100 gradient-custom-3">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-5 col-md-4">
                    <div class="card" style="border-radius: 8px;">
                        <div class="card-body p-3">
                            <h5 class="text-uppercase text-center mb-3">Đăng nhập</h5>

                            <form asp-controller="Login" asp-action="Index">

                                <div data-mdb-input-init class="form-outline mb-2">
                                    <label class="form-label mb-1" for="form3Example3cg" style="font-size: 0.8rem;">Email</label>
                                    <input asp-for="Email" type="email" id="form3Example3cg" class="form-control form-control-sm" style="font-size: 0.8rem; padding: 0.2rem 0.5rem;" />

                                </div>

                                <div data-mdb-input-init class="form-outline mb-2">
                                    <label class="form-label mb-1" for="form3Example4cg" style="font-size: 0.8rem;">Mật khẩu</label>
                                    <input asp-for="Password" type="password" id="form3Example4cg" class="form-control form-control-sm" style="font-size: 0.8rem; padding: 0.2rem 0.5rem;" />

                                </div>

                                <div class="form-group d-none">
                                    <input asp-for="IsActive" class="form-control" value="True" />
                                </div>

                                <div class="d-grid mt-3">
                                    <button type="submit" data-mdb-button-init
                                            data-mdb-ripple-init class="btn btn-primary btn-sm gradient-custom-4" style="font-size: 0.8rem;color:white">
                                        Đăng nhập
                                    </button>
                                </div>

                                <p class="mt3 text-center text-muted mt-2 mb-0" style="font-size: 0.7rem;">
                                    Chưa có tài khoản?<a href="/Register/Index"
                                                       class="fw-bold text-body"><u>Đăng ký</u></a>
                                </p>

                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- JavaScript Libraries -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/wow/wow.min.js"></script>
<script src="~/lib/easing/easing.min.js"></script>
<script src="~/lib/waypoints/waypoints.min.js"></script>
<script src="~/lib/owlcarousel/owl.carousel.min.js"></script>

<!-- Template Javascript -->
<script src="~/js/main.js"></script>


